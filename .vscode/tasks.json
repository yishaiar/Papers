{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile_upload_full",
            "type": "shell",
           
           "command": "lualatex master; bibtex master; lualatex master; lualatex master;./master.pdf;",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        
        
        {
            "label": "start_up",
            "type": "shell",
            "command": "./master.pdf",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        
        

        {
            "label": "git-pull_build ",
            "type": "shell",
            "command": "git pull -f; llualatex master; bibtex master; lualatex master; lualatex master;./master.pdf; ",
            
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },

        {
            "label": "clear_all_aux",
            "type": "shell",
            "command": "del *.aux; del *.log; del *.bbl; del *.log; del *.toc; del *.lof; del *.blg; del *.out; del *.nav; del *.snm;",
            "problemMatcher": []
        },
    ]
}



